<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.inventory_system_android.NewCustomerActivity">


    <TextView
        android:id="@+id/textViewCustID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="Name"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_below="@+id/textViewCustID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="Phone"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Address"
        android:layout_below="@+id/txtPhone"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/txtAddress"
        android:layout_alignStart="@+id/txtAddress" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textViewCustID"
        android:layout_alignStart="@+id/textViewCustID" />

    <EditText
        android:id="@+id/txtCustName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/txtPhone"
        android:layout_alignStart="@+id/txtPhone"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAddCust"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="Add Customer"
        android:layout_below="@+id/textView7"
        android:layout_toLeftOf="@+id/btnCclCust"
        android:layout_toStartOf="@+id/btnCclCust"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btnCclCust"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/btnAddCust"
        android:layout_alignBottom="@+id/btnAddCust"
        android:layout_alignRight="@+id/txtAddress"
        android:layout_alignEnd="@+id/txtAddress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer #"
        android:layout_alignBaseline="@+id/textViewCustID"
        android:layout_alignBottom="@+id/textViewCustID"
        android:layout_alignRight="@+id/textViewCustID"
        android:layout_alignEnd="@+id/textViewCustID" />

</android.widget.RelativeLayout>
