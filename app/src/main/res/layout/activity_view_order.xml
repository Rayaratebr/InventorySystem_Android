<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.inventory_system_android.OrderActivities.ViewOrderActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CustomerDetailsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.73"
                android:text="Order Details"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewOrderDtls"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


            <Button
                android:id="@+id/addPaymentBtnOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Payments" />

            <Button
                android:id="@+id/viewPaymentsBtnOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Payments" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back" />

            <Button
                android:id="@+id/assignCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign to Cutsomer" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonDeleterOrder"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/delete" />

    </android.support.v7.widget.CardView>
</android.widget.LinearLayout>
