<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.inventory_system_android.NewOrderActivity">


    <EditText
        android:id="@+id/orderDueDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addOrderBtn"
        android:layout_alignRight="@+id/addOrderBtn"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:editable="false"
        android:hint="dd/mm/yyyy"
        android:inputType="none" />

    <EditText
        android:id="@+id/orderDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/orderDueDateTxt"
        android:layout_alignLeft="@+id/orderDueDateTxt"
        android:layout_alignStart="@+id/orderDueDateTxt"
        android:layout_marginBottom="27dp"
        android:clickable="true"
        android:editable="false"
        android:hint="dd/mm/yyyy"
        android:inputType="none" />

    <Button
        android:id="@+id/addOrderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Order"
        android:layout_below="@+id/orderDueDateTxt"
        android:layout_marginTop="43dp"
        android:layout_alignLeft="@+id/btnBckOrd"
        android:layout_alignStart="@+id/btnBckOrd"
        android:layout_alignRight="@+id/btnCclOrd"
        android:layout_alignEnd="@+id/btnCclOrd" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/orderDateTxt"
        android:layout_alignBottom="@+id/orderDateTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="Order Date" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/orderDueDateTxt"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:text="Due Date" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="Customer ID"
        android:layout_above="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Button
        android:id="@+id/btnCclOrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/btnBckOrd"
        android:layout_alignBottom="@+id/btnBckOrd"
        android:layout_toRightOf="@+id/btnBckOrd"
        android:layout_toEndOf="@+id/btnBckOrd" />

    <Button
        android:id="@+id/btnBckOrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="54dp"
        android:layout_alignTop="@+id/addOrderBtn"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:id="@+id/txtViewCusIDOrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/orderDateTxt"
        android:layout_alignStart="@+id/orderDateTxt" />

    <TextView
        android:id="@+id/txtViewOrdID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@+id/btnCclOrd"
        android:layout_toStartOf="@+id/btnCclOrd"
        android:text="Order #" />
</android.widget.RelativeLayout>

