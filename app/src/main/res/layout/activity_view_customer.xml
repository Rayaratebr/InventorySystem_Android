<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.inventory_system_android.CustomerActivities.ViewCustomerActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CustomerDetailsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Customer Details"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewCustDtls"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <Button
                android:id="@+id/addOrderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Order" />

            <Button
                android:id="@+id/addPaymentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Payments" />

            <Button
                android:id="@+id/viewOrdersBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Orders" />

            <Button
                android:id="@+id/viewPaymentsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Payments" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.widget.LinearLayout>
