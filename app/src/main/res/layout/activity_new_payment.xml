<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.inventory_system_android.PaymentActivities.NewPaymentActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="42dp"
        android:text="Payment " />

    <TextView
        android:id="@+id/paymentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="     " />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginTop="74dp"
        android:layout_toLeftOf="@+id/paymentID"
        android:layout_toStartOf="@+id/paymentID"
        android:text="Customer ID" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="40dp"
        android:text="Due Date" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="51dp"
        android:text="Amout" />

    <EditText
        android:id="@+id/txtCustIDPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/paymentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtCustIDPayment"
        android:layout_alignRight="@+id/txtCustIDPayment"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="none" />

    <EditText
        android:id="@+id/amountPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignLeft="@+id/paymentDate"
        android:layout_alignStart="@+id/paymentDate" />

    <Button
        android:id="@+id/btnAddPayment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/amountPayment"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        android:layout_toLeftOf="@+id/paymentID"
        android:layout_toStartOf="@+id/paymentID"
        android:text="ADD" />

    <Button
        android:id="@+id/btnClrPayment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAddPayment"
        android:layout_toRightOf="@+id/btnAddPayment"
        android:text="Clear" />

    <Button
        android:id="@+id/btnBackPayment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAddPayment"
        android:layout_alignStart="@+id/btnAddPayment"
        android:layout_below="@+id/btnAddPayment"
        android:text="Back" />

    <Button
        android:id="@+id/btnCclPayment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnBackPayment"
        android:layout_toRightOf="@+id/btnBackPayment"
        android:text="Cancel" />
</android.widget.RelativeLayout>
